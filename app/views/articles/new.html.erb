<!-- app/views/items/new.html.erb -->

<h1>論文登録フォーム</h1>
<%= form_with model: @article, local: true do |form| %>
  <p>
    論文名：<br>
    <%= form.text_field :name %>
  </p>
  <p>
    論文詳細：<br>
    <%= form.text_area :description %>
  </p>
  <p>
    作成者：<br>
    <%= form.text_field :seller %>
  </p>
  <p>
    電子メール：<br>
    <%= form.text_field :email %>
  </p>
  <p>
    論文画像ＵＲＬ：<br>
    <%= form.text_area :image_url %>
  </p>
  <%= form.submit "登録" %>
<% end %>